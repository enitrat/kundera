{
  "name": "kundera-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Kundera Starknet primitives monorepo",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "build:zig": "zig build",
    "test": "pnpm -r test",
    "test:run": "pnpm -r test:run",
    "format": "zig build format && pnpm -r format",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "rm -rf zig-out .zig-cache target && pnpm -r clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8"
  },
  "packageManager": "pnpm@10.26.2"
}
