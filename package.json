{
  "name": "kundera-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Kundera Starknet primitives monorepo",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:run": "pnpm -r test:run",
    "format": "pnpm -r format",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "rm -rf target && pnpm -r clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm -r publish --access public",
    "docs:dev": "cd docs && mintlify dev",
    "docs:build": "cd docs && mintlify build",
    "docs:verify-links": "bun scripts/verify-docs-links.mjs"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "mintlify": "^4.2.255"
  },
  "packageManager": "pnpm@10.26.2"
}
