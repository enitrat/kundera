{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@kundera-sn/kundera-ts": ["../kundera-ts/dist/index.d.ts"],
      "@kundera-sn/kundera-ts/native": ["../kundera-ts/dist/native/index.d.ts"],
      "@kundera-sn/kundera-ts/wasm": ["../kundera-ts/dist/wasm/index.d.ts"],
      "@kundera-sn/kundera-ts/wasm-loader": ["../kundera-ts/dist/wasm-loader/index.d.ts"],
      "@kundera-sn/kundera-ts/jsonrpc": ["../kundera-ts/dist/jsonrpc/index.d.ts"],
      "@kundera-sn/kundera-ts/abi": ["../kundera-ts/dist/abi/index.d.ts"],
      "@kundera-sn/kundera-ts/crypto": ["../kundera-ts/dist/crypto/index.d.ts"],
      "@kundera-sn/kundera-ts/serde": ["../kundera-ts/dist/serde/index.d.ts"],
      "@kundera-sn/kundera-ts/transport": ["../kundera-ts/dist/transport/index.d.ts"],
      "@kundera-sn/kundera-ts/provider": ["../kundera-ts/dist/provider/index.d.ts"],
      "@kundera-sn/kundera-ts/utils": ["../kundera-ts/dist/utils/index.d.ts"],
      "@kundera-sn/kundera-ts/*": ["../kundera-ts/dist/*/index.d.ts"]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
