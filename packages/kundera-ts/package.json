{
  "name": "@kundera-sn/kundera-ts",
  "version": "0.0.3",
  "private": false,
  "description": "Starknet primitives and cryptography library with TypeScript implementations and native Rust FFI bindings",
  "keywords": [
    "starknet",
    "cairo",
    "felt252",
    "pedersen",
    "poseidon",
    "primitives",
    "crypto",
    "ffi"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enitrat/kundera.git",
    "directory": "packages/kundera-ts"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./native": {
      "types": "./dist/native/index.d.ts",
      "import": "./dist/native/index.js",
      "require": "./dist/native/index.cjs"
    },
    "./wasm": {
      "types": "./dist/wasm/index.d.ts",
      "import": "./dist/wasm/index.js",
      "require": "./dist/wasm/index.cjs"
    },
    "./wasm-loader": {
      "types": "./dist/wasm-loader/index.d.ts",
      "import": "./dist/wasm-loader/index.js",
      "require": "./dist/wasm-loader/index.cjs"
    },
    "./jsonrpc": {
      "types": "./dist/jsonrpc/index.d.ts",
      "import": "./dist/jsonrpc/index.js",
      "require": "./dist/jsonrpc/index.cjs"
    },
    "./abi": {
      "types": "./dist/abi/index.d.ts",
      "import": "./dist/abi/index.js",
      "require": "./dist/abi/index.cjs"
    },
    "./transport": {
      "types": "./dist/transport/index.d.ts",
      "import": "./dist/transport/index.js",
      "require": "./dist/transport/index.cjs"
    },
    "./provider": {
      "types": "./dist/provider/index.d.ts",
      "import": "./dist/provider/index.js",
      "require": "./dist/provider/index.cjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    },
    "./serde": {
      "types": "./dist/serde/index.d.ts",
      "import": "./dist/serde/index.js",
      "require": "./dist/serde/index.cjs"
    },
    "./crypto": {
      "types": "./dist/crypto/index.d.ts",
      "import": "./dist/crypto/index.js",
      "require": "./dist/crypto/index.cjs"
    },
    "./Felt252": {
      "types": "./dist/primitives/Felt252/index.d.ts",
      "import": "./dist/primitives/Felt252/index.js",
      "require": "./dist/primitives/Felt252/index.cjs"
    },
    "./ContractAddress": {
      "types": "./dist/primitives/ContractAddress/index.d.ts",
      "import": "./dist/primitives/ContractAddress/index.js",
      "require": "./dist/primitives/ContractAddress/index.cjs"
    },
    "./ClassHash": {
      "types": "./dist/primitives/ClassHash/index.d.ts",
      "import": "./dist/primitives/ClassHash/index.js",
      "require": "./dist/primitives/ClassHash/index.cjs"
    },
    "./StorageKey": {
      "types": "./dist/primitives/StorageKey/index.d.ts",
      "import": "./dist/primitives/StorageKey/index.js",
      "require": "./dist/primitives/StorageKey/index.cjs"
    },
    "./ShortString": {
      "types": "./dist/primitives/ShortString/index.d.ts",
      "import": "./dist/primitives/ShortString/index.js",
      "require": "./dist/primitives/ShortString/index.cjs"
    },
    "./EthAddress": {
      "types": "./dist/primitives/EthAddress/index.d.ts",
      "import": "./dist/primitives/EthAddress/index.js",
      "require": "./dist/primitives/EthAddress/index.cjs"
    },
    "./Address": {
      "types": "./dist/primitives/Address/index.d.ts",
      "import": "./dist/primitives/Address/index.js",
      "require": "./dist/primitives/Address/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "types",
    "wasm",
    "native"
  ],
  "scripts": {
    "build": "bun run build:native && bun run build:wasm && bun run build:dist && bun run build:types",
    "build:dist": "tsup",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly --outDir types",
    "build:native": "cargo build --release --manifest-path ../../Cargo.toml",
    "build:wasm": "cargo build --release --target wasm32-wasip1 --manifest-path ../../Cargo.toml && node scripts/prepare-wasm.mjs",
    "package:native": "bun run ../../scripts/package-native.ts --out .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:docs": "vitest run docs",
    "test:skills": "vitest run docs/skills",
    "test:rust": "cargo test --manifest-path ../../Cargo.toml",
    "lint": "biome check src/",
    "format": "biome format --write src/",
    "prepublishOnly": "bun run build && bun run test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/ffi-napi": "^4.0.10",
    "@types/node": "^22.13.1",
    "@types/ref-napi": "^3.0.12",
    "starknet": "6.23.1",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.0"
  },
  "optionalDependencies": {
    "ffi-napi": "^4.0.3",
    "ref-napi": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@noble/hashes": "^2.0.1",
    "@scure/starknet": "^2.0.0",
    "abi-wan-kanabi": "^2.2.4"
  }
}
